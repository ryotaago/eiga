<div class="container-fluid mt-auto" style="background-color:#000000;">
  <!--text-centerで中央寄せ pt-3=padding topが1rem-->
  <div class="text-center pt-3">
    <!--twitterのtopページurlとアイコン-->
    <%= link_to "https://twitter.com/", class: "text-decoration-none" do %>
      <!--twitterのアイコン　mutedカラー-->
      <i class="fab fa-twitter-square h2 text-light"></i>
    <% end %>

    <%= link_to "https://www.facebook.com/", class: "text-decoration-none mx-2" do %>
      <!--facebookのアイコン　mutedカラー-->
      <i class="fab fa-facebook h2 text-light"></i>
    <% end %>

    <%= link_to "https://www.instagram.com/", class: "text-decoration-none" do %>
      <!--instagramのアイコン　mutedカラー-->
      <i class="fab fa-instagram-square h2 text-light"></i>
    <% end %>

    <%= link_to "https://line.me/ja/", class: "text-decoration-none ml-2" do %>
      <!--lineのアイコン　mutedカラー-->
      <i class="fab fa-line h2 text-light"></i>
    <% end %>
  </div>
  <!--text-centerで中央寄せ　mutedカラー-->
  <p class="text-center text-light">©Copyright 2023 eiga ALL Rights reserved.</p>
</div>

