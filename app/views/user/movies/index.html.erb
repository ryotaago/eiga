<div class="container">
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-3 my-5">
        <div class="card border-secondary mb-3 h-100">
          <%= link_to movie_path(movie['id']) do %>
          <%= image_tag 'https://image.tmdb.org/t/p/w342' + movie.image, class: 'card-img' %>
          <% end %>
            <div class="card-body d-flex justify-content-center align-items-end">
              <h5 class="card-title"><%= link_to movie.title, movie_path(movie), class: 'text-secondary' %></h5>
            </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class = "row">
    <div class = "my-5 text-center" style="max-width: 800px; margin: 0 auto;">
     <h3> <%= paginate @movies %></h3>
    </div>
  </div>
</div>