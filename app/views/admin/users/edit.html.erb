<div class="container">
  <h1>Edit User</h1>

  <%= form_with(model: @user, url: admin_user_path(@user), method: :patch) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <label for="user_is_active">会員ステータス:</label><br>
      <%= form.radio_button :is_active, true, id: "user_is_active" %>
      <%= form.label :is_active, "有効" %><br>
      <%= form.radio_button :is_active, false, id: "user_is_inactive" %>
      <%= form.label :is_active, "退会" %>
    </div>

    <div class="form-group">
      <%= form.submit "Update User", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_user_path(@user), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
