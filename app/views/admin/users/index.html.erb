<div class="text-center">
  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to '詳細', admin_user_path(user), class: 'btn btn-primary btn-sm me-1' %>
            <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-secondary btn-sm me-1' %>
            <%= button_to admin_user_path(user), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm', form: { class: 'd-inline' } do %>
            <i class="fas fa-trash-alt"></i> 削除
          <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
