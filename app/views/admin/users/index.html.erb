<div class="text-center">
  <table class="table">
    <thead>
      <tr>
        <th>名前</th>
        <th>メールアドレス</th>
        <th>会員ステータス</th>
      </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.is_active ? '有効' : '退会' %></td>
          <td>
            <%= link_to '詳細', admin_user_path(user), class: 'btn btn-primary btn-sm me-1' %>
            <%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-secondary btn-sm me-1' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
